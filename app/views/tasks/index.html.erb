<h1><%= t('view.task') %><%= t('view.list') %><%= t('view.display') %></h1>
<table>
  <thead>
    <tr>
      <th><%= t('view.task_name') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.expired_at') %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @task_sort_created.each do |task| %>
      <tr>
        <td class="task_list"><%= task.name %></td>
        <td><%= task.details %></td>
        <td><%= task.expired_at %></td>
        <td><%= link_to t('view.detail'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.destroy?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.task_registration'), new_task_path %>
<%= link_to t('view.expired_sort'), tasks_path(sort_expired:"true") %>
