<h1><%= t('view.task') %><%= t('view.list') %><%= t('view.display') %></h1>

<%= form_with(scope: :search, url: tasks_path, local: true, method: :get) do |f| %>
  <%= f.label t('view.task_name') %>
  <%= f.text_field :name, id: "task_name" ,placeholder:"何かお探しですか？"%>
  <%= f.label t('view.status') %>
  <%= f.select :status, Task.statuses.keys%>
  <%= f.submit t('view.task_search') %>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th><%= t('view.task_name') %></th>
      <th><%= t('view.content') %></th>
      <th><%= t('view.expired_at') %></th>
      <th><%= t('view.status') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @task_sort_created.each do |task| %>
      <tr>
        <td class="task_list_name"><%= task.name %></td>
        <td><%= task.details %></td>
        <td class="task_list_expired_at"><%= task.expired_at %></td>
        <td class="task_list_status"><%= task.status %></td>
        <td><%= link_to t('view.detail'), task %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('view.destroy'), task, method: :delete, data: { confirm: t('view.destroy?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('view.task_registration'), new_task_path %>
<%= link_to t('view.expired_sort'), tasks_path(sort_expired:"true") %>
